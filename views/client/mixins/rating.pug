mixin rating-1
  form.rating
    input#star5(type='radio', name='rating', value='5' disabled)
    label.full(for='star5', title='Awesome - 5 stars')
    input#star4half(type='radio', name='rating', value='4.5' disabled)
    label.half(for='star4half', title='Pretty good - 4.5 stars')
    input#star4(type='radio', name='rating', value='4' disabled)
    label.full(for='star4', title='Pretty good - 4 stars')
    input#star3half(type='radio', name='rating', value='3.5' disabled)
    label.half(for='star3half', title='Meh - 3.5 stars')
    input#star3(type='radio', name='rating', value='3' disabled)
    label.full(for='star3', title='Meh - 3 stars')
    input#star2half(type='radio', name='rating', value='2.5' disabled)
    label.half(for='star2half', title='Kinda bad - 2.5 stars')
    input#star2(type='radio', name='rating', value='2' disabled)
    label.full(for='star2', title='Kinda bad - 2 stars')
    input#star1half(type='radio', name='rating', value='1.5' disabled)
    label.half(for='star1half', title='Meh - 1.5 stars')
    input#star1(type='radio', name='rating', value='1' disabled)
    label.full(for='star1', title='Sucks big time - 1 star')
    input#starhalf(type='radio', name='rating', value='0.5' disabled)
    label.half(for='starhalf', title='Sucks big time - 0.5 stars')

mixin star-rating
  each val in [5,4,3,2,1]
    input(type='radio', id='star-rating' + val, name='rating', value=val required)
    label(for='star-rating' + val)

mixin progression(quantity, ratio = 0)
  .progress-bar
    .progress(style=`width: ${ratio}%`)
  span.quantity #{quantity}