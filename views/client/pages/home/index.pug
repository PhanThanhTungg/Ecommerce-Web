                  img(src="/image/slide/img-slide-3.png")
      </swiper-slide>
    </swiper-container>

    section.section-policy
      .container
        .inner-section-policy.row
          .col-4
            .inner-title
              .icon
                img(src="https://vinova-furstore.myshopify.com/cdn/shop/files/icon-1_200x.png?v=1695007028")
