    section.featuredCategory-section
      .container
        .inner-title Featured Collection
        .inner-subtitle Top picks just for You
        .inner-content.row
          each item in featuredCategory
            .col-4
              .inner-box.text-center
                .inner-image
                  img(src=item.thumbnail.replace('upload/', 'upload/c_limit,w_350/f_auto/'))
                a.inner-button(href=`/products/${item.slug}`) #{item.title}
