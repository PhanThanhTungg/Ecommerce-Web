            .inner-content
              .row
                .col-6
                  .inner-box-1
                    .inner-sub-title Uncover the latest trends just for you
                    .inner-title Discover And Find Your new product
                    button.button-slide Shop Now
                .col-6
                  .inner-box-2
                    img(src="/image/slide/img-slide-1.png")
      </swiper-slide>
      <swiper-slide>
        .container
          .inner-content
            .row
              .col-6
                .inner-box-1
                  .inner-sub-title A Modern Touch for Your Desk or Nightstand
