mixin pagination(pagination)
  nav.pagination-nav(class="text-white" aria-label="Page navigation example")
    ul(class="pagination" class="flex items-center -space-x-px h-8 text-sm")
      if(pagination.currentPage > 1)
        li(class="page-item")
          a(
            class="page-link flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-black-blur dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
            button-pagination = pagination.currentPage-1
          ) 
            <span class="sr-only">Previous</span>
            <svg class="w-2.5 h-2.5 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
            </svg>

      - for(let i = 1; i<= pagination.totalPage;i++)
        li(class=`page-item group ${pagination.currentPage == i ? "active": ""}`)
          a(
            class=`page-link flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-black-blur dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white
            group-[.active]:bg-black group-[.active]:text-white
            `
            button-pagination = i
          ) #{i}

      if(pagination.currentPage < pagination.totalPage)
        li(class="page-item flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-black-blur dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white")
          a(
            class="page-link"
            button-pagination = pagination.currentPage+1
          ) 
            <span class="sr-only">Next</span>
            <svg class="w-2.5 h-2.5 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>