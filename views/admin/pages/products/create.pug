extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main
  if(role.permissions.includes("products_create"))

    h1(class="page-title") CREATE NEW PRODUCT  

    form(
      action=`${prefixAdmin}/products/create`
      id="form-create-product"
      method="POST"
      enctype="multipart/form-data"   
    )
      div(class="form-group")
        label(for="title") Title
        input(
          type="text"
          class="form-control"
          id="title"
          name="title"
          required
        )
      div(class="form-group")
        label(for="product_category_id") Category
        select(
          name="product_category_id"
          id="product_category_id"
          class="form-control"
        )
          option(value="") -- Choose category --
          if(category)
            +select-tree(category)
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="featured1"
          name="featured"
          value="1"
        )
        label(for="featured1" class="form-check-label") Featured
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="featured0"
          name="featured"
          value="0"
          checked
        )
        label(for="featured0" class="form-check-label") Normal
      div(class="form-group")
        label(for="desc") Description
        textarea(
          class="form-control textarea-mce"
          id="desc"
          name="description"
          rows="5"
        )
      div(class="form-group")
        table.tableSize 
          thead
            tr 
              th size 
              th price 
              th stock
          tbody
            tr
              td 
                input(
                  type="text"
                  class="form-control"
                  id="size"
                  name="size"
                  required
                )
              td 
                input(
                  type="text"
                  class="form-control"
                  id="price"
                  name="price"
                  required
                )
              td 
                input(
                  type="text"
                  class="form-control"
                  id="stock"
                  name="stock"
                  required
                )
        .button-1.btn.btn-primary.mt-3.buttonAddSize.mr-3 + size
        .button-1.btn.btn-primary.mt-3.buttonDelSize - size
      div(class="form-group")
        label(for="discount") % Discount
        input(
          type="number"
          class="form-control"
          id="discount"
          name="discountPercentage"
          value="0"
          min="0"
        )

      div(
        class="form-group"
        upload-image
      )
        label(for="images") Images
        input(
          type="file"
          class="form-control-file"
          id="images"
          name="images"
          accept = "image/*"
          upload-image-input
          multiple
        )
      div(class="form-group")
        label(for="position") Position
        input(
          type="number"
          class="form-control"
          id="position"
          name="position"
          placeholder="Tự động tăng"
          min="1"
        )
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value="active"
          checked
        )
        label(for="statusActive" class="form-check-label") Active
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusInActive"
          name="status"
          value="inactive"
        )
        label(for="statusInActive" class="form-check-label") Inactive
      div(class="form-group" style="margin: 0; padding-bottom:30px")
        button(
          type="submit"
          class="btn btn-primary button-1 button-1-2"
        ) Create


    script(src="/admin/js/product.js")