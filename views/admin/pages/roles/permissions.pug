extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main

    if(role.permissions.includes("roles_permissions"))
        if(records)
            div(data-records = records)
            table(
                class="table-hover table-sm mt-5"
                style = "margin-top:0; margin-bottm: 0"
                table-permissions
            )
                thead
                    tr
                        th Permission
                            each item in records
                                th(class="text-center") #{item.title}
                tbody
                    //- danh muc san pham
                    tr(data-name="id" class="d-none")
                        td
                        each item in records
                            td(class="text-center")
                                input(type="text" value=item.id)
                    tr
                        td(colspan="4")
                            | CATEGORY MANAGEMENT
                    tr(data-name="products-category_view")
                        td -----View
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="products-category_create")
                        td -----Create
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="products-category_edit")
                        td -----Edit
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="products-category_delete")
                        td -----Delete
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")

                    //- danh sach san pham
                    tr
                        td(colspan="4")
                            | PRODUCT MANAGEMENT
