                            td(class="text-center")
                                input(type="checkbox")

            button(
                type="submit"
                class="btn btn-primary mb-3 button-1 mt-3"
                button-submit
            ) Update
        form(
            id="form-change-permissions"
            method="POST"
            action=`${prefixAdmin}/roles/permissions?_method=PATCH`
            class = "d-none"
        )
            div(class="form-group")
                input(
